<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cslink.mapper.SysUserMapper">
    <select id="getUserInfoByID" resultType="com.cslink.domain.SysUser">
        SELECT * FROM sys_user where user_id = #{userid}
    </select>

    <select id="existUserName" resultType="com.cslink.domain.vo.SignupVO">
        SELECT username FROM sys_user where username = #{username}
    </select>

    <select id="existEmail" resultType="com.cslink.domain.vo.SignupVO">
        SELECT email FROM sys_user where email = #{email}
    </select>

    <insert id="saveUser" parameterType="com.cslink.domain.vo.SignupVO">
        insert into sys_user(username,email,password) values(#{username},#{email},#{password})
    </insert>
</mapper>