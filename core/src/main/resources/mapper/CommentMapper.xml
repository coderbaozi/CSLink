<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cslink.mapper.CommentMapper">
    <select id="queryCommentByArticleId" resultType="com.cslink.domain.dto.CommentDTO">
        select * from comment where article_id = #{articleId}
    </select>
    <insert id="insertComment">
        insert into comment(article_id,user_id,content,to_uid,comment_time,parent_id)
        VALUES (#{articleId},#{userId},#{content},#{toUid},#{commentTime},#{parentId})
    </insert>
    <select id="queryLastCommentUser" resultType="com.cslink.domain.Comment">
        select * from comment where comment_time = (select MAX(comment_time) from comment where article_id = #{articleId})
    </select>
</mapper>